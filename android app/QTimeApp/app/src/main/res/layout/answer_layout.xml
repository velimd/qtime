<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:text="@string/Answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:id="@+id/button_ans1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"/>

    <Button
        android:text="@string/Answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_ans1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/button_ans2"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"/>

    <Button
        android:text="@string/Answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/button_ans3"
        android:layout_below="@+id/button_ans2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"/>

    <Button
        android:text="@string/Answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_ans3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/button_ans4"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"/>

    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView_id"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:textAlignment="center" />
</RelativeLayout>
